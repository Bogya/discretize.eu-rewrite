---
import "beercss/dist/cdn/beer.min.css";
import "typeface-raleway";
import "typeface-muli";
import backgroundImage from "src/assets/images/hero_sunqua2.jpg";
import NavBar from "../components/navigation/NavBar.astro";
import { Picture } from "@astrojs/image/components";

export interface Props {
  title: string;
  disablePadding?: boolean;
}

const { title, disablePadding = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <script src="beercss/dist/cdn/beer.min.js"></script>

    <title>{title}</title>
  </head>
  <body class="dark">
    <NavBar />

    <main>
      <div class="backgroundImage">
        <Picture
          src={backgroundImage}
          alt="Background"
          aspectRatio="3440:1440"
          formats={["avif", "webp"]}
          widths={[1600, 2160, 3440]}
          sizes="(max-width: 1600px) 10vw, (max-width: 2160px) 50vw, 100vw"
          loading="lazy"
        />
      </div>
      <div class={disablePadding ? "" : "main"}>
        <slot />
      </div>
    </main>
  </body>
</html>

<style is:global>
  ul,
  ol {
    padding-left: 40px;
    margin: 0px 0px 16px;
  }
  ul > li,
  ol > li {
    margin-top: 0.5rem;
  }

  table {
    font-size: inherit;
  }

  @media only screen and (min-width: 1400px) {
    .nowrap {
      white-space: nowrap;
    }
  }

  table td,
  table th {
    width: unset;
  }

  .backgroundImage {
    display: none;
  }

  @media only screen and (min-width: 1400px) {
    .backgroundImage {
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      width: 100%;
      z-index: -1;
      display: block;
    }
    .backgroundImage img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
      opacity: 0.7;
    }
  }
  .main {
    padding: 1.4rem 1.4rem;
    max-width: 1440px;
    margin: 0 auto;
    background-color: var(--background);
  }
  main {
    margin-top: 2rem;
  }
  @media (max-width: 1400px) {
    .main {
      padding: 1rem;
    }
    main {
      margin-top: 0rem;
    }
  }

  body {
    line-height: 1.5;
    font-size: 1.15rem;
  }

  body.dark {
    --primary: #00cccc;
    --primary-dark: #009a9b;
    --primary-light: #64ffff;
    --on-primary: #2e2e2e;
    --primary-container: #64ffff;
    --on-primary-container: #2f3a3f;
    --secondary: #b24d2c;
    --on-secondary: #ffffff;
    --secondary-container: #ff8b66;
    --on-secondary-container: #5a3d2f;
    --tertiary: #7d5260;
    --on-tertiary: #ffffff;
    --tertiary-container: #ffd8e4;
    --on-tertiary-container: #370b1e;
    --error: #b3261e;
    --on-error: #ffffff;
    --error-container: #f9dedc;
    --on-error-container: #370b1e;
    --background: #2f3136;
    --on-background: #ddd;
    --surface: #26292e;
    --on-surface: #ddd;
    --surface-variant: #202122;
    --on-surface-variant: #49454e;
    --inverse-surface: #2a2c31;
    --inverse-on-surface: #f4eff4;
    --outline: #79747e;
    --body: #2f3136;
    --active: rgba(0, 0, 0, 0.1);
    --overlay: rgba(0, 0, 0, 0.5);
    --elevate1: 0 1rem 1rem 0 rgba(0, 0, 0, 0.14),
      0 1rem 3rem 0 rgba(0, 0, 0, 0.12), 0 2rem 1rem -2rem rgba(0, 0, 0, 0.05);
    --elevate2: 0 6rem 10rem 0 rgba(0, 0, 0, 0.14),
      0 1rem 18rem 0 rgba(0, 0, 0, 0.12), 0 3rem 5rem -1rem rgba(0, 0, 0, 0.3);
    --elevate3: 0 10rem 16rem 0 rgba(0, 0, 0, 0.14),
      0 1rem 31rem 0 rgba(0, 0, 0, 0.12), 0 3rem 9rem 0rem rgba(0, 0, 0, 0.4);
    --size: 16px;
    --font: "Raleway";
    --speed1: 0.1s;
    --speed2: 0.2s;
    --speed3: 0.3s;
    --speed4: 0.4s;
  }

  body.light {
    --primary: #00cccc;
    --primary-dark: #009a9b;
    --primary-light: #64ffff;
    --on-primary: #ffffff;
    --primary-container: #64ffff;
    --on-primary-container: #009a9b;
    --secondary: #ff6e40;
    --on-secondary: #ffffff;
    --secondary-container: #ff8b66;
    --on-secondary-container: #b24d2c;
    --tertiary: #7d5260;
    --on-tertiary: #ffffff;
    --tertiary-container: #ffd8e4;
    --on-tertiary-container: #370b1e;
    --error: #b3261e;
    --on-error: #ffffff;
    --error-container: #f9dedc;
    --on-error-container: #370b1e;
    --background: #ffffff;
    --on-background: #1c1b1f;
    --surface: #f5f5f5;
    --on-surface: #2f3435;
    --surface-variant: #e9f9fa;
    --on-surface-variant: #49454e;
    --inverse-surface: #313033;
    --inverse-on-surface: #f4eff4;
    --outline: #79747e;
    --active: rgba(0, 0, 0, 0.1);
    --overlay: rgba(0, 0, 0, 0.5);
    --elevate1: 0 1rem 1rem 0 rgba(0, 0, 0, 0.14),
      0 1rem 3rem 0 rgba(0, 0, 0, 0.12), 0 2rem 1rem -2rem rgba(0, 0, 0, 0.05);
    --elevate2: 0 6rem 10rem 0 rgba(0, 0, 0, 0.14),
      0 1rem 18rem 0 rgba(0, 0, 0, 0.12), 0 3rem 5rem -1rem rgba(0, 0, 0, 0.3);
    --elevate3: 0 10rem 16rem 0 rgba(0, 0, 0, 0.14),
      0 1rem 31rem 0 rgba(0, 0, 0, 0.12), 0 3rem 9rem 0rem rgba(0, 0, 0, 0.4);
    --size: 16px;
    --font: "Raleway";
    --speed1: 0.1s;
    --speed2: 0.2s;
    --speed3: 0.3s;
    --speed4: 0.4s;
  }

  body:has(.nested-dropdowns li:hover) .main {
    filter: brightness(0.5);
    transition: all 0.7s ease;
  }
</style>
