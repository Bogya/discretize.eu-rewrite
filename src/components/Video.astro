---
import { YouTube } from "@astro-community/astro-embed-youtube";

interface Props {
  youtube: string;
  caption?: string;
}

const { youtube, caption } = Astro.props;
---

<YouTube
  id={youtube}
  poster="/hero_twilight-oasis.jpg"
  playlabel="test"
  class="youtube"
/>
{caption && <sub>{caption}</sub>}

<style is:global>
  lite-youtube > .lty-playbtn {
    min-width: 1.5rem !important;
    width: unset;
  }
</style>
