---
export interface Props {
  title: string;
  body: string;
  href: string;
}

const { title } = Astro.props;
---

<article class="card">
  <div>
    <h4 class="cardTitle">{title}</h4>
    <div class="delimiter"></div>
  </div>
  <slot />
</article>

<style>
  .card {
    margin-bottom: 1.5rem;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .cardTitle {
    margin-bottom: 0.5rem;
    font-weight: 500;
  }
  .delimiter {
    margin-bottom: 1rem;
    border-bottom: 1px solid var(--primary);
    max-width: 350px;
  }
</style>
