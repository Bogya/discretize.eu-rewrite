---
import Profession from "./gw2-ui/Profession.astro";
const { title, isFirst, specialization } = Astro.props;
---

<div
  class={`page padding ${isFirst ? "active" : ""}`.trim()}
  id={`page_${(title || specialization)
    ?.toLowerCase()
    .replaceAll(/\/|[^a-zA-Z0-9]+/gm, "")}`}
>
  <div class="page-content">
    <slot />
  </div>
</div>
