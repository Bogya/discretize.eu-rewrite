---
import { TraitLine } from "@gw2-ui/components";

interface Props {
  traits1Id?: number;
  traits1?: string;
  traits1SelectedIds?: string;
  traits2Id?: number;
  traits2?: string;
  traits2SelectedIds?: string;
  traits3Id?: number;
  traits3?: string;
  traits3SelectedIds?: string;
}

const {
  traits1Id,
  traits1,
  traits1SelectedIds,
  traits2Id,
  traits2,
  traits2SelectedIds,
  traits3Id,
  traits3,
  traits3SelectedIds,
} = Astro.props;

const traits1Selected = traits1SelectedIds
  ?.split(",")
  .map((id) => parseInt(id, 10));

const traits2Selected = traits2SelectedIds
  ?.split(",")
  .map((id) => parseInt(id, 10));

const traits3Selected = traits3SelectedIds
  ?.split(",")
  .map((id) => parseInt(id, 10));
---

{traits1}
{
  traits1Id && (
    <TraitLine client:idle id={traits1Id} defaultSelected={traits1Selected} />
  )
}
{traits2}
{
  traits2Id && (
    <TraitLine client:idle id={traits2Id} defaultSelected={traits2Selected} />
  )
}
{traits3}
{
  traits3Id && (
    <TraitLine client:idle id={traits3Id} defaultSelected={traits3Selected} />
  )
}
